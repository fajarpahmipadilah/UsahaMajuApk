<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.LoginScreen"
    android:orientation="vertical"
    android:background="@color/redlogo">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="MASUK"
        android:textSize="28dp"
        android:gravity="center"
        android:fontFamily="@font/poppins_semibold"
        android:letterSpacing="0.20"
        android:textColor="@color/white"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/borderlogin"
        android:layout_marginTop="10dp">


        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/logoum"
            android:layout_marginTop="40dp"
            />

        <EditText
            android:layout_marginTop="60dp"
            android:layout_gravity="center"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:drawableStart="@drawable/emailicon"
            android:fontFamily="@font/poppins_medium"
            android:hint="Email"
            android:background="@drawable/bg_edittext"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:textColor="@color/textkolom"
            android:textSize="18sp" />

        <EditText
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:drawableStart="@drawable/pwicon"
            android:drawableEnd="@drawable/hideicon"
            android:fontFamily="@font/poppins_medium"
            android:hint="Kata sandi"
            android:background="@drawable/bg_edittext"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:textColor="@color/textkolom"
            android:textSize="18sp" />

        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Lupa Kata sandi?"
            android:fontFamily="@font/poppins_regular"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:gravity="right"
            android:layout_gravity="center"

            />

        <Button
            android:id="@+id/btlogin"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/bg_masuk"
            android:fontFamily="@font/poppins_semibold"
            android:text="MASUK"
            android:textColor="@color/bg"
            android:textSize="14sp" />

        <Button
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_button"
            android:drawableStart="@drawable/googleicon"
            android:paddingStart="16dp"
            android:text="Masuk menggunakan google"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="14sp"
            android:textColor="@color/black"
            />

        <Button
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_button"
            android:drawableStart="@drawable/fbicon"
            android:paddingStart="16dp"
            android:text="Masuk menggunakan facebook"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="14sp"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Belum punya akun? Daftar"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:gravity="center"
            android:layout_gravity="center"

            />

    </LinearLayout>
</LinearLayout>